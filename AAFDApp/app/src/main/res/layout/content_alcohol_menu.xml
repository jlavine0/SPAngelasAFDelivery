<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0575ad"
    android:id="@+id/alcohol_layout"
    tools:context=".AlcoholMenu">


    <Button
        android:id="@+id/beer"
        android:layout_width="264dp"
        android:layout_height="133dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="69dp"
        android:backgroundTint="#5c2f02"
        android:text="Beer?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:iconTint="#BC0CDA"
        app:layout_constraintBottom_toTopOf="@+id/wine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#9C27B0" />

    <Button
        android:id="@+id/wine"
        android:layout_width="264dp"
        android:layout_height="133dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#e6c15e"
        android:text="Wine?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:iconTint="#BC0CDA"
        app:layout_constraintBottom_toTopOf="@+id/hardLiquor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beer"
        app:strokeColor="#9C27B0" />

    <Button
        android:id="@+id/hardLiquor"
        android:layout_width="264dp"
        android:layout_height="133dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#1da6a8"
        android:text="Hard Liquor?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wine" />

</androidx.constraintlayout.widget.ConstraintLayout>